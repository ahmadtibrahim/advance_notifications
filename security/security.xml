<odoo>
    <record id="advance_notification_user_rule" model="ir.rule">
        <field name="name">User Own Notifications</field>
        <field name="model_id" ref="model_advance_notification"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="advance_notification_admin_rule" model="ir.rule">
        <field name="name">Admin See All Notifications</field>
        <field name="model_id" ref="model_advance_notification"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>
